<div class="row">
  <h1><strong><em><%= @profile.user.nick %></em></strong> Profile</h1>
  <section class="large-12 large-centered columns profile">
    <div class="row">
      <div class="medium-2 columns">
        <%= image_tag gravatar_picture_url(@profile.user, 150), :class => "profile-picture right" %>
      </div>
      <div class="large-9 small-offset-1 columns left bio">
        <%= link_to_if current_user, "Edit Profile", edit_user_profile_path(current_user, current_user.profile), :class => "profile-edit" %>
        <dl>
          <dd><strong>Nick</strong>: <%= @profile.user.nick %></dd>
          <dd><strong>Name</strong> <%= @profile.user.name %></dd>
          <dd><strong>Email</strong> <%= @profile.user.email %></dd>
          <dd><h2>Bio</h2> <p class="text-justify"><%= @profile.bio %></p></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="large-12 large-centered columns">
        <h2>Your Ads:</h2>
        <ul>
          <% @ads.each do |ad| %>
          <dd><%= link_to ad.title, user_ad_path(:user_id => current_user.id, :id => ad.id) %>   [<%= link_to "Edit Ad", edit_user_ad_path(:user_id => current_user.id, :id => ad.id) %>]</dd>
          <% end %>
        </dl>
      </div>
    </div>
  </section>
</div>