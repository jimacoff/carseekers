<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><a href="#" class="logo">CarSeekers</a></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="has-dropdown active">
        <% if current_user %>
          <a href="#"><strong><%= current_user.nick if current_user %></strong>: Options</a>
          <ul class="dropdown">
            <li><%= link_to "Profile", user_profiles_path(current_user.id) %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          </ul>
        <% else %>
          <a href="#">Sign in - Register</a>
          <ul class="dropdown">
            <li><%= link_to "Sign in/up with Google", user_omniauth_authorize_path(:google_oauth2) %></li>
            <li><%= link_to "Sign up", new_user_registration_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          </ul>
        <% end %>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Latest auctions", all_ads_path %></li>
      <li><%= link_to "Sell your car", new_user_ad_path(:user_id => current_user.id) if current_user %></li>
    </ul>
  </section>
</nav>

<!-- Flash Notices -->
<% if flash[:notice] %>
  <div class="notice">Notice: <%= flash[:notice] %></div>
<% end %>

<% if flash[:error] %>
  <div class="error">Error: <%= flash[:error] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="alert">Alert: <%= flash[:alert] %></div>
<% end %>